                </Button.Foreground>
            </Button>


            <Button Content="=" Grid.Column="3" Grid.Row="3" Grid.RowSpan="2" Click="ButtonEqual">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#A7230A" Margin="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Foreground>
                    <SolidColorBrush Color="White"/>
                </Button.Foreground>
            </Button>


            <Button Content="0" Grid.Row="4" Grid.ColumnSpan="2" Click="ButtonNumber">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#5E5E5E" Margin="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Foreground>
                    <SolidColorBrush Color="White"/>
                </Button.Foreground>
            </Button>


            <Button Content="." Grid.Column="2" Grid.Row="4" Click="ButtonDot">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#5E5E5E" Margin="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Foreground>
                    <SolidColorBrush Color="White"/>
                </Button.Foreground>
            </Button>
        </Grid>
    </Grid>
</Window>
